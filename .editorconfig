root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true
quote_type = single

[*.{json,html}]
indent_size = 2
insert_final_newline = false
quote_type = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.php]
insert_final_newline = false
